package Java_Basics;

public class Variables {

	public static void main(String[] args) {
	//declaring integer variable x
		int x;
		// assigns value of 4 to x
		x = 4;
		System.out.println(x);
		//reassign the variable
		x = 43;
		System.out.println(x);
		
		//declare String variable type words
		String words;
		// assigned "This is a sentence" to words
		words = "This is a sentence";
		System.out.println(words);
		
		//assign and declare value of x
		int x = 4;
		System.out.println(x);
		//reassign the variable
		int x = 43;
		System.out.println(x);
		
		//declare and assign String variable type words
		String words = "This is a sentence";
		System.out.println(words);
	}

}
